<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>


    <style name="CustomTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/app_background</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:alertDialogTheme">@style/CustomAlertDialogTheme</item>
        <item name="android:itemBackground">@color/white</item>
    </style>

    <style name="CustomDialogTheme" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/action_bar_text_color</item>
        <item name="android:windowTitleStyle">@style/CustomDialogTitle</item>
        <item name="android:alertDialogTheme">@style/CustomAlertDialogTheme</item>
    </style>
</resources>
